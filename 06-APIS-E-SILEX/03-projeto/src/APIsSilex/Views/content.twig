                <td><a href="{{ path('update') }}"><button class="btn btn-primary" type="submit" name="alterar" >Alterar</button></a></td>
                <td><a href="#"><button class="btn btn-danger" type="submit" name="deletar">Deletar</button></a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div><!-- /jumbotron -->
{% endblock %}