{% extends "layout.twig" %}
{% block title %}Lista de produtos{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h2>Busca de produtos</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>COD..</th>
                <th>NOME</th>
                <th>DESCRIÇÃO</th>
                <th>VALOR</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for product in products %}
            <tr>

                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.value }}</td>

                <td><a href="{{ path('produto', {id:product.id}) }}"><button class="btn btn-info " type="submit" name="visualizar" >Visualizar</button></a></td>
                <td><a href="{{ path('atualizar', {id:product.id}) }}"><button class="btn btn-primary" type="submit" name="alterar" >Alterar</button></a></td>
                <td><a href="{{ path('delete', {id:product.id}) }}"><button class="btn btn-danger" type="submit" name="deletar">Deletar</button></a></td>
            </tr>
            {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('lista_page', {page:1 } ) }}"><button class="btn btn-info " type="submit" name="voltar" >Voltar</button></a>
    </div><!-- /jumbotron -->
{% endblock %}