{% extends "layout.twig" %}
{% block title %}2º Projeto Doctrine & Silex - Code Education - Lista de produtos{% endblock %}
{% block content %}
    <div class="jumbotron">

        <table class="table table-striped">
            <thead>
            <tr>
                <th><a href="{{ path('insert') }}"><button class="btn btn-success " name="voltar" >Cadastar</button></a></th>
                <th><a href="{{ path('order-name') }}"><button class="btn btn-info " type="submit" name="voltar" >Ordenar por nome</button></a></th>
                <th><a href="{{ path('order-value') }}"><button class="btn btn-info " type="submit" name="voltar" >Ordenar por valor</button></a></th>
