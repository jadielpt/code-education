{% extends "layout_Tags.twig" %}
{% block title %}2º Projeto Doctrine & Silex - Code Education - Lista de produtos{% endblock %}
{% block content %}
    <div class="jumbotron">

        <table class="table table-striped">
            <thead>
            <tr>

                <th><a href="{{ url('insert_tags') }}"><button class="btn btn-success " type="submit" name="cadastra" >Cadastar</button></a></th>
                <th><a href="{{ path('lista_page', {page:1 } ) }}"><button class="btn btn-info " type="submit" name="cadastra" >Lista de Produtos</button></a></th>
                <th><a href="{{ path('lista_category', {page:1 } ) }}"><button class="btn btn-info " type="submit" name="cadastra" >Lista de Categorias</button></a></th>

            </tr>
            </thead>
            <thead>
            <tr>
                <th>COD..</th>
                <th>NOME</th>
                <th></th>
                <th>AÇÕES</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>

                    <td><a href="{{ path('tags_id', {id:tag.id}) }}"><button class="btn btn-info " type="submit" name="visualizar" >Visualizar</button></a></td>
                    <td><a href="{{ path('atualizar_tags', {id:tag.id}) }}"><button class="btn btn-primary" type="submit" name="alterar" >Alterar</button></a></td>
                    <td><a href="{{ path('delete_tags', {id:tag.id}) }}"><button class="btn btn-danger" type="submit" name="deletar">Deletar</button></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <nav>
            <ul class="pagination">

                {% for i in 1..((data/5)+0.8) %}
                    <li><a href="{{ path('lista_tags', {page:i } ) }}">{{ i }}</a></li>
                {% endfor %}

            </ul>
        </nav>
    </div><!-- /jumbotron -->
{% endblock %}
